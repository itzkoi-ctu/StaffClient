@page "/staffdetails/{id}"

@inherits StaffDetailBase


@if(employee== null){
    <div class="spinner"></div>
}else{
    <div class="row justify-content-center m-3">
        <div class="col-sm-5">
            <div class="card-header">
                <h1>@employee.FirstName @employee.LastName</h1>
            </div>
            <div class="card-body text-center">
                <h4>Staff ID: @employee.EmployeeId</h4>
                <h4>Email: @employee.Email</h4>
                <h4>Starting Date: @employee.DateOfBirth</h4>
                <h4>Department: @employee.DepartmentId</h4>
            </div>


            <div class="card-footer">
                <a href="/stafflist" class="btn btn-primary"> Back</a>

            </div>
        </div>

    </div>
}